class Solution:
    def smallestSubWithSum(self, x, arr):
        n = len(arr)
        current_sum = 0
        min_len = n + 1
        start = 0
        end = 0
        
        while end < n:
            while current_sum <= x and end < n:
                current_sum += arr[end]
                end += 1
            
            while current_sum > x and start < n:
                if end - start < min_len:
                    min_len = end - start
                
                current_sum -= arr[start]
                start += 1
                
        return min_len if min_len <= n else 0
